# ========================================
# Graphiti MCP Standalone Configuration
# ========================================

# Neo4j Database Configuration
# --------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_HTTP_URL=http://localhost:7474
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Neo4j Memory Settings
# Adjust based on available system RAM
# For development: 512m/1G is sufficient
# For production: consider 1G/2G or higher
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=1G
NEO4J_PAGECACHE=512m

# OpenAI Configuration (Required)
# --------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=

# Model Configuration
# Recommended models:
# - gpt-4o-mini (cost-effective, good performance)
# - gpt-4o (higher quality, more expensive)
# - gpt-3.5-turbo (fastest, lower cost)
MODEL_NAME=gpt-4o-mini
SMALL_MODEL_NAME=gpt-4o-mini
LLM_TEMPERATURE=0.1

# Azure OpenAI Configuration (Optional)
# Use this if you prefer Azure OpenAI over OpenAI directly
# --------------------------------------------
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_API_KEY=
AZURE_OPENAI_EMBEDDING_ENDPOINT=
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=

# MCP Server Configuration
# --------------------------------------------
MCP_HTTP_PORT=8000
MCP_HTTP_URL=http://localhost:8000
MCP_GROUP_ID=default
SEMAPHORE_LIMIT=10

# Backup Configuration
# --------------------------------------------
# Cron schedule format: sec min hour day month weekday
# Default: Every day at 2am, 10am, and 8pm
BACKUP_SCHEDULE=0 0 2,10,20 * * *

# Number of days to retain backup files
BACKUP_RETENTION_DAYS=7

# System Configuration
# --------------------------------------------
# Timezone for backup scheduling and logging
TIMEZONE=UTC

# Docker Monitoring (Optional)
# --------------------------------------------
# Slack webhook URL for Watchtower notifications
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Development Configuration
# --------------------------------------------
# Set to true for development mode
DEBUG=false
LOG_LEVEL=INFO

# Advanced Configuration
# --------------------------------------------
# Uncomment and adjust these settings for specific needs

# Custom Neo4j plugins (comma-separated)
# NEO4J_PLUGINS=["graph-data-science"]

# Custom Java heap size for Neo4j
# JAVA_HEAP_SIZE=1G

# Enable Neo4j enterprise features (requires license)
# NEO4J_ACCEPT_LICENSE_AGREEMENT=no
# NEO4J_EDITION=enterprise

# Custom backup directory (inside container)
# BACKUP_DIR=/backups

# Maximum concurrent operations (reduce if hitting rate limits)
# SEMAPHORE_LIMIT=5

# Custom OpenAI request timeout (seconds)
# OPENAI_TIMEOUT=30

# Enable verbose logging for debugging
# VERBOSE_LOGGING=false