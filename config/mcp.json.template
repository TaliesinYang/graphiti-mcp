{
  "mcpServers": {
    "graphiti": {
      "command": "docker",
      "args": [
        "exec", "-i", "graphiti-mcp",
        "uv", "run", "graphiti_mcp_server.py",
        "--transport", "stdio",
        "--group-id", "{{MCP_GROUP_ID}}"
      ],
      "env": {
        "NEO4J_URI": "{{NEO4J_URI}}",
        "NEO4J_USER": "{{NEO4J_USER}}",
        "NEO4J_PASSWORD": "{{NEO4J_PASSWORD}}",
        "OPENAI_API_KEY": "{{OPENAI_API_KEY}}",
        "MODEL_NAME": "{{MODEL_NAME}}"
      }
    }
  }
}